{
  "name": "social-metric-graphic",
  "version": "1.0.0",
  "description": "Project in Node.Js and Vue.js that will display a Graphic getting the values from a Rest API.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "run-server": "nodemon index.js",
    "run-client": "cd client && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run run-server\" \"npm run run-client\"",
    "install-client": "cd client && npm i && cd ..",
    "install-server": "npm i",
    "install-project": "npm run install-client && npm run install-server",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelAmaralMario/social-metric-graphic.git"
  },
  "keywords": [
    "vue.js",
    "node.js",
    "highcharts",
    "social-metric-graphic",
    "graphic"
  ],
  "author": "Rafael Mario <rafaelamaralmario@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaelAmaralMario/social-metric-graphic/issues"
  },
  "homepage": "https://github.com/rafaelAmaralMario/social-metric-graphic#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "install": "^0.12.1",
    "npm": "^6.14.6",
    "webpack": "^4.17.1",
    "webpack-dev-server": "^3.1.7"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.4",
    "cross-env": "^5.0.5"
  }
}
